# Copy to .env and fill in values

# Database (when using Docker for db: use DB_PORT=5433; when using Docker for redis: REDIS_URL=redis://localhost:6380/0)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=

# Redis (use redis://localhost:6380/0 when using Docker db+redis from docker-compose)
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=your_secret_key_min_32_chars_for_production
JWT_ISSUER=sss_bags_api
JWT_ACCESS_EXP=15
JWT_REFRESH_EXP=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Twilio (for OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Mailer (for email verification)
SMTP_ADDRESS=localhost
SMTP_PORT=1025
SMTP_DOMAIN=localhost
MAILER_FROM=noreply@sssbags.com
FRONTEND_URL=http://localhost:5173

# Optional: S3 for ActiveStorage in production
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=
